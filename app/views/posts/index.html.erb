<%= form_for(@post) do |form| %>
  <%= form.label :content %>
  <%= form.text_field :content, id: :post_content, class: 'form-control', placeholder: 'Add New Post' %>
  <% if @post.errors.full_messages.any? %>
    <p class="errors">
      <%= "Post could not be saved. #{@post.errors.full_messages.join('. ')}" %>
    </p>
  <% end %>
  <%= form.submit 'Save', class: 'btn btn-primary' %>
<% end %>

<article class="timeline">
  <h3>
    Recent posts
  </h3>
  <ul class="posts">
    <% @posts.each do |post| %>
        <li class="home-li text-center" id="posts-timeline">
          <div class="gravatar-list">   
            <%= gravatar_for(post.user) %>
              <p><%= post.content %></p>
              <p><%= link_to post.user.name, post.user %></p>
              <p class="time"><%= time_ago_in_words(post.created_at) %> ago. </p>
          </div>
    <% end %>
  </ul>
</article>
